<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    android:id="@+id/safebox_first_start" 
    android:paddingLeft="@dimen/activity_horizontal_margin" 
    android:paddingTop="@dimen/activity_vertical_margin" 
    android:paddingRight="@dimen/activity_horizontal_margin" 
    android:paddingBottom="@dimen/activity_vertical_margin" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
  	xmlns:android="http://schemas.android.com/apk/res/android">
  	
    <ImageView 
        android:id="@+id/safebox_first_start_image" 
        android:paddingTop="180.0dip" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:src="@drawable/safebox_first_start_image" />
    
    <TextView 
        android:textSize="12.0dip" 
        android:gravity="center" 
        android:id="@+id/safebox_first_start_txt" 
        android:paddingTop="250.0dip" 
        android:layout_width="270.0dip" 
        android:layout_height="wrap_content" 
        android:text="@string/safebox_first_start_txt" 
        android:layout_centerHorizontal="true" />
    
    <Button 
        android:id="@+id/safebox_first_start_btn" 
        android:layout_marginTop="180.0dip" 
        android:text="@string/safebox_first_start_txt_btn" 
        android:layout_below="@id/safebox_first_start_txt" 
        style="@style/SafeBoxButtonStyle" />
</RelativeLayout>
